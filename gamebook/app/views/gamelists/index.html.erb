<p id="notice"><%= notice %></p>

<h1>Gamelists</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamelists.each do |gamelist| %>
      <tr>
        <td><%= link_to 'Show', gamelist %></td>
        <td><%= link_to 'Edit', edit_gamelist_path(gamelist) %></td>
        <td><%= link_to 'Destroy', gamelist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

