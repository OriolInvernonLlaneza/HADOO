<p id="notice"><%= notice %></p>

<h1>Videojuegos</h1>

<section class="juegos row">
  <% @games.each do |game| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag game.image_url, class: 'image img-thumbnail'), game %>
      </div>
    </div>
  <% end %>
</section>
